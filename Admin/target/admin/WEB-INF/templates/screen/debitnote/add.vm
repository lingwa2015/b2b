<script type="text/javascript">

	$(document).ready(function() {
		$.metadata.setType("attr", "validate");
		$( "#order_date" ).datepicker();
	});

	var checkSubmitFlag = false;
	function save() {
	  	if(checkSubmitFlag ==true){
	       alert("请勿重复提交");
	       return false;
	    }

	    checkSubmitFlag = true;

		disableBtn('saveBtn');
		
		var userId = document.getElementById("customerId").value;
	    if(userId==null||userId==0){
	       alert("请输入正确的公司名称缩写");
	       return false;
	    }
	    var amount = document.getElementById("debitnote_amount").value;
	    if(!amount){
	    	alert("请输入金额");
	       return false;
	    }

		submitJqueryFormData('debitNoteForm', '$!{rc.contextPath}/debitnote/addDebitNote.do', function(
				data) {
			 checkSubmitFlag = false;

			if (data == '添加成功') {
				window.location.href = "${rc.contextPath}/debitnote/debitNoteList.htm";
			} else {
				alert("操作失败，原因:" + data);
				enableBtn('saveBtn');

			}
		});
	}

	
	
	function checkbox(){
		var checkbox=$("input[id='invoice_status']").is(':checked');
		if(checkbox=true){
			$("#invoice_status").val(1);
		}else{
			$("#invoice_status").val(0);
		}
	}
	
	function check(){
		if (needYM) {
			if($("#year").val().length<=0){
				alert("请选择统计年份！");
				return false;
			}
			if($("#month").val().length<=0){
				alert("请选择统计月份！");
				return false;
			}
		}

		return true;
	}

	function selectYM(selectObj) {
		needYM = true;
	}

</script>
