<script type="text/javascript">
var phoneflag=false;
$(document).ready(function() {
	$.metadata.setType("attr", "validate");
	$("#form1").validate({
		errorPlacement: function(error, element){
			var error_span = element.next('span');
			error_span.addClass("errorClass");
			error_span.html(error.html());
		},
		success: function(label){
			label.remove();
		},
		submitHandler: function (){
        		save();
            	return false;
        }
	});
 });
 


 
 
function save(){
	disableBtn('saveBtn');
    var res =  new RegExp(/(?!^[0-9]+$)(?!^[A-z]+$)(?!^[^A-z0-9]+$)^.{8,}$/);
    var password = $('#password').val();
    if(!res.test(password)){
        alert('密码必须8位以上，至少包含至少包含数字、字母、符号中的2种！');
        return false;
    } else {
        var url = "${rc.contextPath}/user/userPasswordSave.do";
        submitFormData("form1", url, show);
    }
}

function show(data){
    
	if(data.indexOf("成功")!=-1){
		alert(data);
		cancel();
	}
	else{
		alert(data);
		enableBtn('saveBtn');
	}
}

function cancel(){
  	window.location.href="${rc.contextPath}/user/userlist.htm";
}
</script>

<div class="content">
	<div class="bd-actionbar">
		<a href="${rc.contextPath}/user/userlist.htm" title="返回用户列表" class="btn btn-return"><</a>
			<h4 class="tit">修改用户密码</h4>
	</div><!--bd-actionbar-->
		
	<div class="bd-main">
		<div class="bd-main-inner">
			<form class="jqtransform" name="userForm" id="form1" action="${rc.contextPath}/user/userPasswordSave.do" method="post">
				<input type="hidden" name="id" id="id" value="$!user.id"/>
				<table class="form">
					<tr>
						<td align="right">
							<label class="tit"><font color='red'>*</font>姓名：</label>
						</td>
						<td>
							$!user.userName
						</td>
					</tr>
					<tr>
						<td align="right">
							<label class="tit"><font color='red'>*</font>手机号码：</label>
						</td>
						<td>
							$!user.mobilePhone
						</td>
					</tr>
					<tr>
						<td align="right"><label class="tit"><font color='red'>*</font>密码：</label></td>
						<td>
							<input validate="{required:true,maxlength:32}" class="form-input" type="passWord" name="passWord" id="password" value=""/>
							&nbsp;<span></span>	
						</td>
					</tr>
					<tr class="btn-bar">
						<td></td>
						<td><a class="btn btn-primary" id="saveBtn" href="#" onclick="$('#form1').submit();">保存</a></td>
					</tr>
				</table>
			</form>
		</div><!--bd-main-inner-->
	</div><!--bd-main-->
</div><!--content-->