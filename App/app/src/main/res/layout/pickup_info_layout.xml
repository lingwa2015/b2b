<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

    <ImageView
        android:id="@+id/pickup_info_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/sh_manager_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@id/pickup_info_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/pickup_info_image"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pickup_info_picker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="老顾"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/pickup_info_picker_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="18605886103"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/pickup_info_storehouse_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="武汉市江汉区周星星提货点"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/pickup_info_storehouse_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="武汉市江汉区天目山路28号光谷农贸市场6号"
            android:textColor="@android:color/darker_gray"
            android:textSize="13dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/pickup_info_checked"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:paddingRight="10dp"/>
</RelativeLayout>
