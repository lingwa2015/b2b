<resources>

    <style name="sxc_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dip</item>
        <item name="android:background">@drawable/bottombar_itembg_selector</item>
        <item name="android:textColor">@color/bottombar_textcolor_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="titleStyle">
        <item name="android:background">@color/transparent_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="sxc_style" parent="android:Theme.Light">
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/titleStyle</item>
    </style>
</resources>
